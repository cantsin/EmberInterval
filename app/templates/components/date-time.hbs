<form>
  <h2>{{label}}</h2>
  <div class="form-group">
    <label for="date">Date</label>
    <!-- do not use key-press: this returns the last value for some reason. -->
    <!-- https://github.com/emberjs/ember.js/issues/3053 -->
    {{input value=date placeholder='YYYY-MM-DD' class='form-control' key-up="changeDate"}}
  </div>
  <div class="form-group">
    <label for="time">Time</label>
    {{input value=time placeholder='HH:MM:SS' class='form-control' key-up="changeTime"}}
  </div>
</form>
