<form {{action 'authenticate' on='submit'}}>
  <h2>{{label}}</h2>
  <div class="form-group">
    <label for="date">Date</label>
    {{input value=date placeholder='YYYY-MM-DD' class='form-control' action=change}}
  </div>
  <div class="form-group">
    <label for="time">Time</label>
    {{input value=time placeholder='HH:MM:SS' class='form-control' action=change}}
  </div>
</form>
